<h1>Articles Listing page </h1>

<table>
  <caption>Articles</caption>
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col" colspan="4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.description %></td>
              <!--By default the link_to invokes the HTTP GET action.  But, here,
              we want to invoke the different actions.  So we have to specifiy them -->
          <td><%= link_to 'Show', article_path(article.id), data: { turbo_method: :show } %></td>
          <td><%= link_to 'Edit', edit_article_path(article.id),
                  data: { turbo_method: :edit } %><td>
          <td><%= link_to 'Delete', article_path(article.id),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>

    </tbody>

</table>

<p>
  <%= link_to 'Create a new Article', new_article_path(), data: { turbo_method: :new } %> |
  <%= link_to 'Home', root_path() %> |
  <%= link_to 'About', about_path() %>
</p>
