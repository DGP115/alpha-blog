<div class="container">

	<div class="row justify-content-md-center">
		<div class="col-4 mt-2">
			<div class="card text-center shadow mb-2 bg-white rounded">

				<div class="card-body">
					<div class="card-title mb-3">
						Category:  <strong><%= @category.name %></strong>
					</div>
					<% if logged_in? && current_user.admin? %>
						<%= link_to "Edit", edit_category_path(@category),
												class: "btn btn-outline-primary btn-sm" %>
						<%= link_to "Delete", category_path(@category),
												class: "btn btn-outline-danger btn-sm",
												data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
					<% end %>
				</div>

				<div class="card-footer text-muted">
					<small>
						Created <%= time_ago_in_words(@category.created_at) %> ago.<br>
						Edited <%=time_ago_in_words(@category.updated_at) %> ago.<br>
						<strong>
							Currently assigned to <%= pluralize(@category.articles.count, 'article') %>.
						</strong>
					</small>
				</div>

			</div>
		</div>
	</div>

</div>
